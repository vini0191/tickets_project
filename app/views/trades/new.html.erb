<div class="container padding-top-page-content fix-height-container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-4 mt-4">
      <div class="card mt-4">
        <div class="card-title p-4">
          <h2><%= @ticket.user.name %></h2>
        </div>
        <div class="card-body p-4">
          <div class="card-text">
            <p><%= @ticket.seat %></p>
            <p><%= @ticket.area %></p>
            <p><strong>$<%= @ticket.price / 100.0 %></strong></p>
          </div>
        </div>
        <div class="card-footer">
          <%= link_to "Cancel", :back, class: 'btn_red float-left' %>
          <%= link_to "Check Out", ticket_trades_path(@ticket), class: 'btn_blue float-right', method: 'post' %>
        </div>
      </div>
    </div>
  </div>
</div>
