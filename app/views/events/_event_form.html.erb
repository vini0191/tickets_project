<div class="container padding-top-page-content">
  <div class="row justify-content-center">
    <div class="card shadow-sm m-4 p-4">
      <h2>Add a New Event</h2>
      <%= simple_form_for @event do |f| %>
        <%= f.input :title, label: 'Event Name' %>
        <%= f.input :start_time %>
        <%= f.input :location %>
        <%= f.input :category %>
        <%= f.input :description %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <div class="d-none d-md-block" id="map" data-markers="<%= @markers.to_json %>"data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        <%= link_to "Cancel", events_path, class: 'btn_red float-left', data: { confirm: 'Are you sure?' } %>
        <%= f.button :submit, class: 'btn_blue float-right' %>
      <% end %>
    </div>
  </div>
</div>
