<div class="container">
  <%= link_to 'New event', new_event_path, class:'btn btn-primary float-right mt-3' %>
  <div class="row">
    <% @events.each do  |event| %>
      <div class="col-sm-12 col-md-4 col-lg-3 my-2">
        <%= link_to event_path(event) do %>
          <div class="card" style="height: 250px; margin: '8px';">
            <div class="card-body">
              <div class="card-title">
                <h2><%= event.title %></h2>
                <div class="card-text">
                  <p><%= event.location %></p>
                  <p><%= event.start_time.strftime("%d %b - %A - %H:%M ") %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
