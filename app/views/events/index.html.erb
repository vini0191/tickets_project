<div class="container padding-top-page-content">

  <% if @events.count > 0 %>
    <div class="d-none d-md-block" id="map" data-markers="<%= @markers.to_json %>"data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    <%= render 'shared/event_card', events: @events %>
  <% else %>
    <div class="col-sm-12 col-md-6">
      <h2>No available events.</h2>
    </div>
  <% end %>
</div>
