<div class="navbar navbar-expand-sm navbar-dark navbar-lewagon navbar-toggler">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "logo-yoohood.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active home-button mr-1">
          <%= link_to "Home", "#", class: "nav-link text-white" %>
        </li>
        <li class="nav-item messages-button mr-2">
          <%= link_to "Messages", "#", class: "nav-link text-white" %>
        </li>
        <li class="nav-item dropdown">
          <% placeholder = "https://www.wittenberg.edu/sites/default/files/2018-10/nouser_0.jpg" %>
          <%= image_tag current_user.photo.url ? current_user.photo.url : placeholder , class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My tickets", "#", class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "My trades", "#", class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item btn btn btn-light btn-sm button">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
