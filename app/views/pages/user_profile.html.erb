<div class="container padding-top-page-content">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-6">
      <div class="card">
        <div class="card-title p-4">
          <div class="d-flex flex-row justify-content-between align-items-center">
            <% placeholder = "https://www.wittenberg.edu/sites/default/files/2018-10/nouser_0.jpg" %>
            <%= image_tag @user.photo.url ? @user.photo.url : placeholder , class: "avatar", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <h1><%= @user.name %></h1>
          </div>
        </div>
        <div class="card-body p-4">
          <div class="card-text text-justify">
            <p><%= @user.description %></p>
          </div>
          <div class="d-flex flex-column align-items-end mt-5">
            <div class="class card-text">Avarage rating</div>
            <div class="class card-text">⭐️⭐️⭐️</div>
          </div>
          <div class="my-4">
            <%= link_to "Back", :back, class: 'btn_red float-left' %>
            <% if @user == current_user %>
              <%= link_to "Edit", edit_user_registration_path, class: 'btn btn-outline-primary float-right' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
