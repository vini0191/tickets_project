
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "concert-image.jpg" %>')">
  <div class="container">
    <div class="banner-content">
      <h1 class="text-center p-3 mb-2 text-white">Find the perfect event</h1>

      <%= simple_form_for :search, url: events_path, method: :get do |f| %>

       <div class="form-row align-items-center justify-content-center">
         <div class="col-sm-3 my-1">
          <label class="sr-only" for="inlineFormInputGroupCity">City</label>
          <input type="text" class="form-control" type="text" name="search[location]" placeholder="city or zipcode">
         </div>

         <div class="col-sm-3 my-1">
           <label class="sr-only" for="inlineFormInputDate">date</label>
           <input type="date" class="form-control" name="search[date]" id="search_date">
         </div>

         <div class="col-sm-3 my-1">
           <label class="sr-only" for="inlineFormInputGroupEvent">Event</label>
           <input type="text" class="form-control" type="text" name="search[title]" placeholder="event, artist or venue">
         </div>

         <div class="col-auto my-1">
           <button type="submit" class="btn btn-outline-light">Submit</button>
         </div>
       </div>

      <% end %>
    </div>
  </div>
</div>


<div class="container">
  <h4 class="mt-5 mb-2 text-white">Recently added events</h4>

  <%= render 'shared/event_card', events: @events_recent %>
</div>

<div class="container">
  <h4 class="mt-5 mb-2 text-white">More Events</h4>


  <%= render 'shared/event_card', events: @events_diff %>


  <%= link_to events_path do %>
  <div class="d-flex justify-content-center">
    <button class="btn btn-lg btn-outline-light deco-none ">See more</button>
  </div>
  <% end %>
</div>

