

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "concert-image.jpg" %>'); height: 80vh; background-size: cover; background-position: center">
  <div class="container">
    <div>
      <h1 class="text-center p-3 mb-2 text-white">Find the perfect event</h1>

      <%= simple_form_for :search, url: root_path, method: :get do |f| %>

       <div class="form-row align-items-center justify-content-center">
         <div class="col-sm-3 my-1">
          <label class="sr-only" for="inlineFormInputGroupCity">City</label>
          <input type="text" class="form-control" type="text" name="search[city]" placeholder="city or zipcode">
         </div>

         <div class="col-sm-3 my-1">
           <label class="sr-only" for="inlineFormInputDate">date</label>
           <input type="date" class="form-control" name="search[date]" id="search_date">
         </div>

         <div class="col-sm-3 my-1">
           <label class="sr-only" for="inlineFormInputGroupEvent">Event</label>
           <input type="text" class="form-control" type="text" name="search[event]" placeholder="event, artist or venue">
         </div>

         <div class="col-auto my-1">
           <button type="submit" class="btn btn-outline-light">Submit</button>
         </div>
       </div>

      <% end %>
    </div>
  </div>
</div>


<div class="container">
  <h4 class="mt-5 mb-2">Popular events</h4>

  <div class="row mb-3">
    <% @events.each do |event| %>
      <div class="col-sm-4 mb-3">
        <div class="card-trip">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-trip-infos">
            <div>
              <h2><%= event.title %></h2>
              <p><%= event.location %></p>
              <p><%= event.start_time %></p>
              <p>Short description here!</p>
            </div>
            <h2 class="card-trip-pricing">Â£99.99</h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


