<div class="container padding-top-page-content fix-height-container">
  <div class="row justify-content-center mt-4">
    <div class="col-sm-12 col-md-4">
      <div class="card p-4">
        <p>Price: <%= @ticket.price %></p>
        <p>Seat: <%= @ticket.seat %></p>
        <p>Area: <%= @ticket.area %></p>
      </div>
      <% if  @ticket.user == current_user%>
        <%= link_to 'Edit', edit_ticket_path(@ticket), class: "btn_blue float-right mt-2" %>
      <% else %>
        <%= link_to 'Buy', new_ticket_trade_path(@ticket), class: "btn_blue float-right mt-2" %>
      <% end %>
      <%= link_to 'Back', event_path(@ticket.event), class: "btn_red float-left mt-2" %>
    </div>
  </div>
</div>
